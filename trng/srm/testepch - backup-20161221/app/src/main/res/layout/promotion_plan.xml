<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="1.0"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.88"
        android:orientation="vertical">
    <TextView
            android:id="@+id/tvSpaceApplication"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/promotion"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/action_bar_Color"
        />
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_green"
    android:layout_margin="8dp"
     >
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
     >
     <LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
   <Spinner
            android:id="@+id/spinnerPOption"
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
       <EditText
        android:id="@+id/etCmpName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Company Name"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>
        <EditText
        android:id="@+id/etIndrustry"
        android:layout_width="match_parent"
       android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Industry"
        android:gravity="center_vertical"
         android:inputType="textPersonName"
         android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>
         <EditText
        android:id="@+id/etContactP"
         android:layout_width="match_parent"
       android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Contact Person"
        android:inputType="textPersonName"
         android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>  
        <EditText
        android:id="@+id/etDesignation"
         android:layout_width="match_parent"
       android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Designation"
        android:inputType="textPersonName"
         android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>  
        <EditText
        android:id="@+id/etE_mail"
       android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
         android:hint="Email"
          android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>  
        
        <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="Mobile"
         android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:ems="10" >
        </EditText>  
      <Button
            android:id="@+id/btnPromotionSubmit"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/submit"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/main_btn_selector"
        />
         </LinearLayout>
        </ScrollView>
        </LinearLayout>
        <!-- <FrameLayout
        android:id="@+id/AdsFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.12"
        >
        </FrameLayout> -->
    </LinearLayout>

     

</LinearLayout>
