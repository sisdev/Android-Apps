<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llfeedbackFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:weightSum="1"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:focusableInTouchMode="true" >
 
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight=".88"
     android:fadingEdge="none"
	>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     
     android:orientation="vertical"
     android:background="@color/transparent" >
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"    
    android:orientation="horizontal"   
     >

    <TextView 
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Features"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <RatingBar
        android:id="@+id/myRatingBarFirst"
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:minHeight="25dp"
        android:numStars="5"
        android:paddingTop="5dp" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal"
     >

    <TextView 
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="User Interface"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <RatingBar
     android:id="@+id/myRatingBarSecond"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="center_vertical"
     android:paddingTop="5dp"
     style="@style/RatingBar"  
     android:numStars="5" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal"
     >

    <TextView 
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Data Accuracy"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <RatingBar
     android:id="@+id/myRatingBarThird"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="center_vertical"
     style="@style/RatingBar" 
     android:paddingTop="5dp" 
     android:numStars="5"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal"
     >

    <TextView 
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Performance"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <RatingBar
     android:id="@+id/myRatingBarFourth"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="center_vertical"
     style="@style/RatingBar"  
     android:paddingTop="5dp"
     android:numStars="5" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal"
     >

    <TextView 
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Ease of Use"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <RatingBar
     android:id="@+id/myRatingBarFiveth"
    android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="center_vertical"
     style="@style/RatingBar"  
     android:paddingTop="5dp"
     android:numStars="5" />

</LinearLayout>
<EditText
        android:id="@+id/edtRemarks"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Remarks"
        android:gravity="left|top"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounder_button_white"
        
        />
<Button 
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:text="Submit"
    android:layout_gravity="center"
    android:background="@drawable/common_button_selector"
    android:textColor="@color/black"
    android:id="@+id/btnfeedbackSubmit"
    
    />
 </LinearLayout>
 </ScrollView>
  <RelativeLayout 
     android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.12"
     >
 <FrameLayout
        android:id="@+id/AdsFrameLayout"
        style="@style/add_banner_width_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@anim/banner_animator"
        >
        </FrameLayout>
   </RelativeLayout>  

</LinearLayout>
