<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FilterItem">
      
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">65dp</item>
           
            <item name="android:hint">@string/filterItem</item>
            <item name="android:singleLine">true</item>
            
           
          
    </style>
    <!-- Text size -->
    <style name="txtSize">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>
    <style name="txtSizeBellowNarmal">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Text style -->
    <style name="txtStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Gray</item>
    </style>
    
    <!-- this style is used for event date textview -->
    <style name="eventDateTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Gray</item>
        
        </style>
  <!-- **************Core Theme you can change to see new look and feel *****************************-->
         <!-- this style used in exb_list_item-->
    <style name="exb_list_item_style">
        <item name="android:textColor">@color/white</item>
         <item name="android:background">@drawable/main_btn_selector</item>
         <item name="android:textSize">14sp</item>
         <item name="android:textStyle">bold</item>
        </style>
         <style name="txt_large">
         <item name="android:textSize">16sp</item>
        </style>
        <style name="txt_medium">
         <item name="android:textSize">14sp</item>
        </style>
        <style name="txt_xlarge">
         <item name="android:textSize">18dp</item>
        </style>
        <!-- To chang the exhibitors list(exhibitors_fragment.xml is used)-->
         <style name="exhibitors_fragment_style">
        <item name="android:background">@drawable/main_btn_selector</item>
        </style>
        
   <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratings_stars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>
    
   <style name="add_banner_width_height">       
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">50dp</item>
   </style>
</resources>
