<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:background="@color/transparent"
   
    android:orientation="vertical" >
    
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1.0" 
        android:layout_weight="0.16"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
       
       >

        
        
        
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="0dp"
        android:weightSum="1.0" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.28">
       <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_btn_exhibitor_selector" 
            android:layout_weight="0.5"
            android:background="@color/transparent"
             android:scaleType="fitCenter"
             android:onClick="exhibitors"
             android:layout_marginRight="5dp"
            android:layout_gravity="center"
            />
       <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/venue_map_btn_selector" 
            android:layout_weight="0.5"
             android:background="@color/transparent"
             android:layout_marginLeft="5dp"
            android:onClick="gotoVenuMap"
            android:scaleType="fitCenter"
             android:layout_gravity="center"/>
        

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1.0" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_weight="0.28">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/nearby_btn_selector" 
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:layout_marginRight="5dp"
            android:onClick="nearBy"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
        <ImageButton
           
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/qrcode_btn_selector" 
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp"
            android:onClick="gotoMyQR"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1.0" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_weight="0.28">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/layout_btn_selector" 
            android:layout_weight="0.5"
             android:background="@color/transparent"
             android:layout_marginRight="5dp"
            android:onClick="map" 
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
        <ImageButton
           
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/locate_btn_selector" 
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:onClick="locate"
            />

    </LinearLayout>
    
</LinearLayout>