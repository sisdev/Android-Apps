<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" 
       />

    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        
        android:contentDescription="@string/book_game_of_thrones"
        android:src="@drawable/upload_file_selector" />
    <EditText android:id="@+id/captionForImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minLines="3"
        android:background="@drawable/rounder_button_click"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:hint="Caption"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/share"
        android:textStyle="bold"
         android:layout_gravity="center"
         android:visibility="invisible"
         android:background="@drawable/main_btn_selector"
        android:textColor="@color/list_item_text_color"/>

</LinearLayout>