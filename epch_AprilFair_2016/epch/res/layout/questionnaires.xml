<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >
    <android.support.v4.view.ViewPager
        android:id="@+id/queViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/elButton" >
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/elButton"
        style="@style/add_banner_width_height"
        android:padding="5dp"
        android:layout_above="@+id/AdsFrameLayout" >
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/common_button_selector"
            android:text="@string/previous"
            android:textColor="@color/black" />
        <!-- comman_button_ihgf_selector -->
        <TextView
            android:id="@+id/queCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />
         <Button
            android:id="@+id/btnNext"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_button_selector"
            android:text="@string/next"
            android:textColor="@color/black" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/AdsFrameLayout"
        style="@style/add_banner_width_height"
        android:background="@anim/banner_animator"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
