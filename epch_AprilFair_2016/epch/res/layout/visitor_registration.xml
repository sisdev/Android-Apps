<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:focusableInTouchMode="true"
    android:focusable="false" >
    <RelativeLayout
	    android:id="@+id/formTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
	    android:background="@drawable/rounded_green" >
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/homeexpo" />
        <TextView
            android:layout_toRightOf="@+id/imageLogo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:gravity="center"
	        android:text="@string/form_name"
	        style="@style/txt_large"
	        android:textStyle="bold"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formTitle"
        android:layout_above="@+id/AdsFrameLayout"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="2dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:background="@drawable/rounded_gradient_click"
	            android:orientation="vertical" >
                <EditText
	                android:id="@+id/edtName"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/name"
	                android:imeOptions="actionNext"
	                android:inputType="textPersonName"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtNoPerson"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/no_of_persons_accompanying"
	                android:imeOptions="actionNext"
	                android:inputType="number"
	                android:background="@drawable/rounder_button_click"
	                 android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtTitle"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/title"
	                android:imeOptions="actionNext"
	                android:inputType="textAutoCorrect"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtCompany"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/company_name"
	                android:imeOptions="actionNext"
	                android:inputType="textAutoCorrect"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtAddress"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/address"
	                android:imeOptions="actionNext"
	                android:inputType="textAutoCorrect"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtCountry"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/country"
	                android:imeOptions="actionNext"
	                android:inputType="textAutoCorrect"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtTelephone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/telephone_isd"
	                android:imeOptions="actionNext"
	                android:inputType="number"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:maxLength="20"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtFax"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:maxLength="20"
	                android:gravity="left|top"
	                android:hint="@string/fax_wh_isd"
	                android:imeOptions="actionNext"
	                android:inputType="phone"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtWebsite"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/website"
	                android:imeOptions="actionNext"
	                android:inputType="textWebEmailAddress"
	                android:background="@drawable/visitor_edit_text_bg"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
	            <EditText
	                android:id="@+id/edtEmail"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:minHeight="45dp"
	                android:padding="5dp"
	                android:layout_margin="2dp"
	                android:gravity="left|top"
	                android:hint="@string/email"
	                android:imeOptions="actionDone"
	                android:inputType="textEmailAddress"
	                android:background="@drawable/rounder_button_click"
	                android:textColorHint="@color/light_gray"
	                android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:id="@+id/btnNext"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/next"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/common_button_selector" />
            <!-- comman_button_ihgf_selector -->
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/AdsFrameLayout"
        style="@style/add_banner_width_height"
        android:background="@anim/banner_animator"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
