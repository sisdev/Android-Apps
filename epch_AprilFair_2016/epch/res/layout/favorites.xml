<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFavoritesID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_marginTop="10dp"
         android:layout_weight="0.88"
         android:orientation="vertical" >

         <EditText
             android:id="@+id/productSearchBoxSearch"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="5dp"
             android:background="@drawable/rounder_button_white"
             android:hint="@string/filterItem"
             android:padding="5dp"
             android:textColor="@color/Gray" />

         <ListView
             android:id="@+id/productListViewSearch"
             style="@style/txtStyle"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_margin="5dp"
             android:layout_weight="0.73"
             android:background="@drawable/rounder_button_white"
             android:fadingEdge="none"
             android:padding="5dp" >
         </ListView>

         <Button
             android:id="@+id/btnFavorites"
             android:layout_width="200dp"
             android:layout_height="50dp"
             android:layout_gravity="center"
             android:background="@drawable/common_button_selector"
             android:text="Add Exhibitor"
             android:textColor="@color/black"
             android:layout_marginBottom="10dp" />
     </LinearLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight=".12" >
         
    <FrameLayout
        android:id="@+id/AdsFrameLayout"
        style="@style/add_banner_width_height"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@anim/banner_animator"
        >
        </FrameLayout>
    </LinearLayout>
</LinearLayout>