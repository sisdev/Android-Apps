<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

  <SurfaceView android:id="@+id/preview_view"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent">
  </SurfaceView>

  <com.assusoft.efair.qrcode.ViewfinderView
      android:id="@+id/viewfinder_view"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@color/transparent">
  </com.assusoft.efair.qrcode.ViewfinderView>

  
   <!-- this layout is visible if another qrcode scanned rather than application -->
   
 <LinearLayout 
               android:id="@+id/result_view"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:gravity="center"
                android:padding="4dip" 
                android:weightSum="1.0">

                <TextView 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content" 
                   android:layout_margin="20dp"
                   android:id="@+id/tvResultView"
                   android:text="ljjjfaklsfjlafjlsafasfjaslkfjasklf"
                   android:gravity="center|left"
                   android:layout_weight="0.8"
                   android:textStyle="bold"
                   android:background="@color/semi_transparent"
                   android:textColor="@color/white"
                   android:padding="2dp"/>
                <!-- android:textColor="@color/Dark_Gray" -->
           
 
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:layout_marginBottom="0dp">
        <Button 
            android:id="@+id/btnWebSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Open URL"
            android:layout_gravity="center"
            android:background="@drawable/common_button_selector"
            android:textColor="@color/white"/>
         
    </LinearLayout>
     
  

 </LinearLayout>
