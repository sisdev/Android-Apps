<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="casaneeds.appLaunch" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/casaneeds"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AppSplash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.MyTaskListActivity"
            android:label="@string/title_activity_task_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.zz_notused.Order_Fullfillment"
            android:label="@string/title_activity_order__fullfillment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.reports.Task_SummaryActivity"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.unassignedTask.UnassignedTaskActivity"
            android:label="@string/title_activity_unassigned__task"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.MyTaskListActivity_Online"
            android:label="@string/title_activity_online_task_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.MyTaskListActivity_OffLine"
            android:label="@string/title_activity_off_line_task"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.zz_notused.Online_OrderFullfillment"
            android:label="@string/title_activity_online__order_fullfillment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.zz_notused.Offline_OrderFullfillment"
            android:label="@string/title_activity_offline__order_fullfillment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.OrderFullfillmentActivity"
            android:label="@string/title_activity_offline__card_view__order_fullfillment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.Packing_Activity"
            android:label="@string/title_activity_packing_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.AcceptPaymentActivity"
            android:label="@string/title_activity_confirm_delivery"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="casaneeds.taskactivity.DeliveryItemsActivity"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

    </application>

</manifest>
