<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="55dp"
    tools:showIn="@layout/activity_delievery__task"
    android:background="@drawable/customborder"
    tools:context="com.example.sunita.ecommerce_app.Delievery_Task">

    <RelativeLayout android:id="@+id/orderreport"
        android:layout_height="wrap_content"
        android:background="@drawable/roundborder_pink"
        android:layout_width="match_parent">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Order No."
                    style="@style/TextViewH"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/od_no"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout >

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Cust. Name"
                    style="@style/TextViewH"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

            />
            </LinearLayout >

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Address"
                    style="@style/TextViewH"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
/>
            </LinearLayout >

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Payment Mode"
                    style="@style/TextViewH"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/pmode"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout >
      </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/laydrsframe1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/roundcorner_green"
        android:layout_weight="1"
        android:layout_marginTop="8dp"

        android:layout_below="@+id/orderreport">

        <RelativeLayout android:id="@+id/rel_drs3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <LinearLayout android:id="@+id/rel_drs4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:weightSum="4"
                android:gravity="center_vertical">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="65dp"
                    android:layout_weight="1"
                    style="@style/ListViewTitle"
                    android:text="Sr.No."/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:layout_weight="1"
                    android:text="Item"
                    style="@style/ListViewTitle"
                    android:gravity="center_horizontal"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:layout_weight="1"
                    android:text="Qty"
                    style="@style/ListViewTitle"
                    android:gravity="center_horizontal"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="35dp"
                    android:layout_weight="1"
                    android:text="Status"
                    style="@style/ListViewTitle"
                    android:gravity="center_horizontal"/>


           </LinearLayout>

            <LinearLayout android:id="@+id/rel_drs5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/rel_drs4">
                <ListView
                    android:id="@+id/list_items"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/listviewheading"
                    android:background="#F8F8FF"
                    android:divider="@color/list_divider"
                    android:dividerHeight="2dp"
                    />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


    <RelativeLayout android:id="@+id/orderamt"
        android:layout_height="wrap_content"
        android:background="@drawable/roundborder_pink"
        android:layout_below="@+id/laydrsframe1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent">

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Total Amt."
                    style="@style/TextViewH"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/ettotal_amt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout >

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Received"
                    style="@style/TextViewH"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_received"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:layout_weight="1"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout >

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Collected"
                    style="@style/TextViewH"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/et_collected"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout >
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="Submit"
        android:id="@+id/submit"
        style="@style/ButtonStyleText"
        android:background="@drawable/buttonshape_green"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
