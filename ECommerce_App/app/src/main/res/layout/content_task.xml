<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="55dp"
    android:background="@drawable/customborder"
    tools:showIn="@layout/activity_task_"
    tools:context="com.example.sunita.ecommerce_app.Task_Activity">


    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginTop="9dp"
        android:id="@+id/listviewheading">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            style="@style/ListViewTitle"
            android:text="Order No."/>


        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            style="@style/ListViewTitle"
            android:text="Address"/>

         <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            style="@style/ListViewTitle"
            android:text="Status"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/listviewheading"/>


<ListView
        android:id="@+id/list_mytask"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:layout_below="@+id/listviewheading"
        android:divider="@color/list_divider"
        android:dividerHeight="2dp"
        />

    <!--   android:background="#F8F8FF"   -->






</RelativeLayout>
